#include <signal.h>
#include <sys/types.h>
#include <unistd.h>
#include <stdlib.h>
#include <stdio.h>
#include <fcntl.h>

static void sighandler(int sig) {
    if(sig == SIGINT) {
        int fd = open("log.txt", O_APPEND | O_WRONLY);
        write(fd, "Program exited (SIGINT)", 50);
        close(fd);
        exit(0);
    }
    else if(sig == SIGABRT) {
        printf("Parent PID: %d\n", getpid());
    }
    else {
    	printf("Unknown signal, how is this handled?");
    	exit(1);
    }
}

int main() {
    setbuf(stdout, NULL);
    if(signal(SIGINT, sighandler) == SIG_ERR)
      printf("Error catching SIGINT\n");
    if(signal(SIGABRT, sighandler) == SIG_ERR)
      printf("Error catching SIGABRT\n");
  	int i;
    for(i = 0; i < 33; i++) {
    	psignal(i, "\n");
    }
    while(1) {
        printf("PID: %d\n", getpid());
        sleep(1);
    }

}
